{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true,
        "amd": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "max-len": ["error", { "code": 200}],
        "no-console": "warn",
        "indent": ["error", 2],
		"global-require": "off"
    }
}